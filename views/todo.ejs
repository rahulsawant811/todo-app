<html>
    <head>
        <title>Todo Title</title>
        <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>

        <link rel="stylesheet" href="/assets/styles.css" type="text/css">

        <script src="/assets/todo-list.js" charset="utf-8"></script>
    </head>
    <body>
        <h1>My Todo List</h1>
        <div id="todo-table">
            <form>
                <input type="text" name="item" placeholder="Add new item..." value="" required="">
                <button type="submit">Add Item</button>
            </form>
            <ul>
                <% todos.forEach(function(todo){ %>
                    <li value="<%= todo._id %>"> <%= todo.item %> </li>
                <% }); %>
            </ul>
        </div>
    </body>
</html>
